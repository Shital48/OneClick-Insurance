@page
@model LoginModel

@{
    ViewData["Title"] = "SignIn";
}

<div class="container h-500 d-flex justify-content-center">

    <div class="card" style="width: 30rem; background-color: rgba(0, 0, 255, 0.1); margin-top: 10px; padding-left: 120px;">
        <div class="card-body">
            <form id="account" method="post">
                <h4 style="color: WHITE; background-color: midnightblue; margin-left: -141px; margin-right: -21px; margin-top: -21px; padding: 15px; padding-left: 100px;">SignIn into your Account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <b><label asp-for="Input.Email"></label></b>
                    <input asp-for="Input.Email" class="form-control"  style="width: 200px;"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b><label asp-for="Input.Password"></label></b>
                    <input asp-for="Input.Password" class="form-control" style="width: 200px;"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">

                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="background-color: midnightblue; border: none; margin-left: 70px;">SignIn</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="margin-left: -80px;">Forgot your password?</a> &nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp; Not a User? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">SignUp</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
<img class="card-img-top" src="~/images/l-bg.jpg" alt="Card image cap" height="570" style="position: absolute; top:-2px; left: 0; z-index: -1 ">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
