@page
@model RegisterModel
@{
    ViewData["Title"] = "SignUp";
}

<div class="container h-500 d-flex justify-content-center">
    <div class="card" style="width: 30rem; background-color: rgba(0, 255, 0, 0.2); margin-top: 10px;">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 d-flex justify-content-center">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h4 style="color: WHITE; background-color: green; margin-left: -137px; margin-right: -136px; margin-top: -21px; padding: 15px; padding-left: 120px;">SignUp to an Account</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <b><label asp-for="Input.Email"></label></b>
                            <input asp-for="Input.Email" class="form-control"/>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <b><label asp-for="Input.Password"></label></b>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <b><label asp-for="Input.ConfirmPassword"></label></b>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-left: 70px; background-color: GREEN; border: none;">SignUp</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<img class="card-img-top" src="~/images/r-bg.jpg" height="570" alt="Card image cap" style="position: absolute; top:-2px; left: 0; z-index: -1">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
